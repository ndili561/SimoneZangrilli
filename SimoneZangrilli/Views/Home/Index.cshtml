                    <h2 class="section-title mb-3">Grazie..Sarai contattato al piu' presto</h2>
                </div>
            </div>*@
        <div class="row">
            <div class="col-md-12 mb-5">

                <form method="post" asp-controller="home" asp-action="post" class="p-5 bg-white">

                    <h2 class="h4 text-black mb-5">Modulo di Contatto</h2>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row form-group">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label class="text-black" asp-for="FirstName">Nome</label>
                            <input type="text" id="fname" asp-for="FirstName" class="form-control">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="text-black" asp-for="LastName">Cognome</label>
                            <input type="text" id="lname" asp-for="LastName" class="form-control">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row form-group">

                        <div class="col-md-12">
                            <label class="text-black" asp-for="Email">Email</label>
                            <input type="email" id="email" asp-for="Email" class="form-control">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="row form-group">
                        <div class="col-md-12">
                            <label class="text-black" asp-for="Message">Messaggio</label>
                            @Html.TextAreaFor(c => c.Message, new { @class = "form-control", @cols = 30, @rows = 7 })
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="submit" value="Invia" class="btn btn-primary btn-md text-white">
                        </div>
                    </div>


                </form>




            </div>
        </div>
    </div>
